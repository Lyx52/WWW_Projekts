@page
@model WebProject.Pages.Account.Register
@{
    ViewData["Title"] = "Izveidot jaunu kontu";
    Model.ReturnUrl = "/Index";
}
<div class="row justify-content-center">
    <form class="card col-12 col-lg-4 px-4 py-4 mt-5 border-0" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h1 class="fs-3 mb-3 text-primary fw-bold text-center">Izveidot jaunu kontu</h1>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group mb-3">
            <label asp-for="Input.Email" class="text-primary fw-bold"></label>
            <input asp-for="Input.Email" class="form-control" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Input.Password" class="text-primary fw-bold"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Input.ConfirmPassword" class="text-primary fw-bold"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <div class="form-group mb-3">
            <label asp-for="Input.Username" class="text-primary fw-bold"></label>
            <input asp-for="Input.Username" class="form-control" />
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <hr />
        <button class="mt-1 w-100 btn btn-lg btn-primary bg-filler border-0 text-primary fw-bold" type="submit">Reģistrēties</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}