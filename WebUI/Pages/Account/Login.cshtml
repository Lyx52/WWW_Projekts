@page
@attribute [ValidateAntiForgeryToken]
@model WebProject.Pages.Account.Login
@{
    ViewData["Title"] = "Login page";
}
<div class="row justify-content-center">
    <form class="card col-12 col-lg-4 px-4 py-4 mt-5 border-0" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        @Html.AntiForgeryToken()
        <h1 class="fs-3 fw-bold text-center">Pieslēgties</h1>
        <hr/>
        <div asp-validation-summary="ModelOnly" class="form-submit-error"></div>
        <div class="form-floating mb-2">
            <input asp-for="Input.EmailOrUsername" class="form-control" id="floatingEmailOrUsername" placeholder="E-Pasts vai Lietotājvārds"/>
            <label asp-for="Input.EmailOrUsername" for="floatingEmailOrUsername"></label>
            <span asp-validation-for="Input.EmailOrUsername" class="text-danger"></span>
        </div>
        <div class="form-floating mb-2">
            <input asp-for="Input.Password" class="form-control" id="floatingPassword" placeholder="Parole"/>
            <label asp-for="Input.Password" for="floatingPassword"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-between">
            <div class="form-check form-switch">
                <input asp-for="Input.RememberMe" class="form-check-input" type="checkbox" role="switch" id="flexRememberMe"/>
                <label asp-for="Input.RememberMe" class="form-check-label" for="flexRememberMe">Atcerēties mani</label>
            </div>
            <a asp-page="/Account/Register" class="link-info text-decoration-none">Vēlies reģistrēties?</a>
        </div>

        <hr/>
        <button class="w-100 btn btn-lg btn-primary bg-filler border-0 text-black fw-bold" type="submit">Ienākt</button>
    </form>
</div>