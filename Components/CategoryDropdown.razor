@using WebProject.Core.Models
<div class="dropdown">
    <button class="btn dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
        --Izvēlēties kategoriju--
    </button>
    <ul class="dropdown-menu">
        <li>
            @* https://mdbootstrap.com/docs/standard/extended/dropdown-multilevel/ *@
            <div class="btn-group dropend">
                <a class="dropdown-item" @onmouseover="@(() => OnCategoryOver(true))" @onmouseout="@(() => OnCategoryOver(false))" href="#">Test123</a>
                <ul class="dropdown-menu @(ShowMenu ? "show" : "hide")">
                    <li><a class="dropdown-item" href="#">Another action</a></li>
                    <li><a class="dropdown-item" href="#">Something else here</a></li>
                </ul>
            </div>
        </li>
        <li><a class="dropdown-item" href="#">Another action</a></li>
        <li><a class="dropdown-item" href="#">Something else here</a></li>
    </ul>
</div>
@code {
    [Parameter]
    public string Id { get; set; }

    public string Test { get; set; } = "test";
    public bool ShowMenu { get; set; } = false;
    private ListingCategory UncategorizedCategory { get; set; }

    public void OnCategoryOver(bool open)
    {
        Test = "fff";
        ShowMenu = open;
        StateHasChanged();
    }
}